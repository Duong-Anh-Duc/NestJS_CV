{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "mail/templates/**/*",
      {
        "include": "../public/**/*",
        "outDir": "./dist"
      },
      {
        "include": "../views/**/*", 
        "outDir": "./dist"
      }
    ],
    "watchAssets": true
  }
}
